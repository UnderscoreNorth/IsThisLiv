{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "outDir": "dist"
  },
  "ts-node": {
    //"esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "exclude": ["node_modules", "build"]
}
